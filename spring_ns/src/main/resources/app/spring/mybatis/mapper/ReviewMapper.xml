<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="app.spring.mybatis.mapper.ReviewMapper">
  	<!--  리뷰 등록 -->
  	<insert id="insert" parameterType="review"  >
  		insert into review values(0,#{	d_num},#{m_phone},#{r_content},#{r_score},
  	<if test="r_pic!=null">
  	#{r_pic},
  	</if>
  	<if test="r_pic==null">
  	null,
  	<!--  -->
  	</if>
  	0,now())
  	</insert>
  	<!--  리뷰 리스트  출력할거 -->
  	<select id="list2"  resultType="review" parameterType="int">
     	select rpad(substr(m_phone,1,7),length(m_phone),'*') m_phone,r_score,r_content,r_pic from review where d_num=#{d_num}
  	</select>
  	
  	
  </mapper>