<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name=".admin"  template="/WEB-INF/views/layout.jsp" >
		<put-attribute name="header" value="/WEB-INF/views/admin/header.jsp"/>
		<put-attribute name="content" value="/WEB-INF/views/admin/content.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/admin/footer.jsp"/>
	</definition>
	
	<definition name=".*.*.*"  extends=".admin">
		<put-attribute name="header" value="/WEB-INF/views/admin/header.jsp"/>
		<put-attribute name="content" value="/WEB-INF/views/admin/{1}/{2}/{3}.jsp"/>
	</definition>

	
	<definition name=".*.*"  extends=".admin">
		<put-attribute name="header" value="/WEB-INF/views/admin/header.jsp"/>
		<put-attribute name="content" value="/WEB-INF/views/admin/{1}/{2}.jsp"/>
	</definition>
	
	<definition name=".*"  extends=".admin">
		<put-attribute name="content" value="/WEB-INF/views/admin/{1}.jsp"/>
	</definition>

</tiles-definitions>